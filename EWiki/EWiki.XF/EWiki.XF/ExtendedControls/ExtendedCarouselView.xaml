<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
             x:Class="EWiki.XF.ExtendedControls.ExtendedCarouselView">
  <Grid x:Name="MainContent">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="15"/>
    </Grid.RowDefinitions>
    
    <forms:CarouselView Grid.Row="0" ItemsSource="{Binding ItemsSource}" ItemTemplate="{Binding ItemTemplate}" BackgroundColor="#80000000" Item="{Binding SelectedItem}" Position="{Binding Position}"/>
    <StackLayout Grid.Row="1" x:Name="StackIndicator" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Spacing="0">
      
    </StackLayout>
  </Grid>
</ContentView>
